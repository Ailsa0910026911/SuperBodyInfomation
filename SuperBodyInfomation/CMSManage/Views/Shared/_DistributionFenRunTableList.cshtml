@using CTCommon.Extended
@using Webdiyer.WebControls.Mvc
@model PagedList<CTModel.BusinessShareProfit>
<table class="table table-condensed table-hover" id="table">
    <thead>
        <tr style="background-color:#EBF3FA">
            <th>经销商一级分润（VIP-4）</th>
            <th>经销商一级分润（VIP-5）</th>
            <th>经销商一级分润（VIP-6）</th>
            <th>同级分润</th>
            <th>VIP用户分润</th>
            <th>经销商二级分润（VIP-6-5）</th>
            <th>经销商二级分润（VIP-6-4）</th>
            <th>经销商二级分润（VIP-5-4）</th>
            <th>经销商三级分润（VIP-6-5-4）</th>
            <th>类型</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="tooltip-test" data-toggle="tooltip" data-placement="top">
                <td>@item.S1_4</td>
                <td>@item.S1_5</td>
                <td>@item.S1_6</td>
                <td>@item.S1_1</td>
                <td>@item.S0_0</td>
                <td>@item.S2_6_5</td>
                <td>@item.S2_6_4</td>
                <td>@item.S2_5_4</td>
                <td>@item.S3_6_5_4</td>
                <td>@if (item.Type == 0)
                { <span>信用卡</span>}
                else if(item.Type==1)
                { <span>贷款</span>}
                </td>
                <td><a href="~/Default/DistributionFenRun?Id=@item.Id"><input value="修改" accesskey="S" class="btn btn-info" style="width:54px" /></a></td>
            </tr>
        }
    </tbody>
</table>
<div class="text-center">
    @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "id", ContainerTagName = "ul", CssClass = "pagination", CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>", DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>", PagerItemTemplate = "<li>{0}</li>", Id = "bootstrappager" })
</div>

