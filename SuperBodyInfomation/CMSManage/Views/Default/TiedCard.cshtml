
@{
    ViewBag.Title = "用户绑卡";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                用户绑卡
            </header>
            <div class="panel-body">
                <form class="form-horizontal adminex-form" action="TiedCard" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">手机号</label>
                        <div class="col-sm-10">
                            <input type="text" name="Mobile" id="Mobile" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">类型</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="Type" readonly="true" id="Type">
                                <option value="1" selected>结算卡</option>
                                <option value="2">信用卡</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">持卡人姓名</label>
                        <div class="col-sm-10">
                            <input type="text" name="Name" id="Name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">银行名称</label>
                        <div class="col-sm-10">
                            <span>@Html.DropDownList("BId", ViewBag.database as IEnumerable<SelectListItem>, new { @class = "form-control" })</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">开户支行</label>
                        <div class="col-sm-10">
                            <input type="text" name="Deposit" id="Deposit" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">银行卡号</label>
                        <div class="col-sm-10">
                            <input type="text" name="Card" id="Card" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">CVV（信用卡）</label>
                        <div class="col-sm-10">
                            <input type="text" name="CVV" id="CVV" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">账单日（信用卡）</label>
                        <div class="col-sm-10">
                            <input type="text" name="BillDay" id="BillDay" class="form-control" placeholder="例如：7">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">还款日（信用卡）</label>
                        <div class="col-sm-10">
                            <input type="text" name="RefundDay" id="RefundDay" class="form-control" placeholder="例如：25">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">到期年（信用卡）</label>
                        <div class="col-sm-10">
                            <input type="text" name="ValidYear" id="ValidYear" class="form-control" placeholder="例如：2025到期，请填写25">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">到期月（信用卡）</label>
                        <div class="col-sm-10">
                            <input type="text" name="ValidMonth" id="ValidMonth" class="form-control" placeholder="例如：5月到期，请填写05">
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary">保存</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
<script src="https://cdn.bootcss.com/jquery/1.10.2/jquery.min.js">
</script>
<script type="text/javascript">
    $(function () {
        $("#M1").addClass("active");
        $("#M1").children("ul").children("li").eq(1).addClass("active");
    });
</script>

