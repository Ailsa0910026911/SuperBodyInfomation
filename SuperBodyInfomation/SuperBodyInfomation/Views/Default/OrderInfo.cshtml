

@{
    ViewBag.Title = "订单填写";
}
<div class="panel panel-default">
    <div class="panel-body">
        <form class="form-horizontal" action="OrderInfo" method="post" role="form">
            <div class="form-group">
                <label for="firstname" class="col-sm-4 control-label">名字</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="UserName" name="UserName"
                           placeholder="请输入名字">
                </div>
            </div>
            <div class="form-group">
                <label for="lastname" class="col-sm-4 control-label">手机号码</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="Phone" name="Phone"
                           placeholder="请输入电话号码">
                </div>
            </div>
            <div class="form-group">
                <label for="lastname" class="col-sm-4 control-label">收货地址</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="Adress" name="Adress"
                           placeholder="例如：XX省XX市XX区XX具体到门牌号">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button type="submit" class="btn btn-default">保存</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="http://cdn.static.runoob.com/libs/jquery/2.1.1/jquery.min.js"></script>
<script type="text/javascript">
    $(function () {
        $("#nav_all li").removeClass("active");
        $("#nav_all").children("li").eq(1).addClass("active");
    });
</script>




