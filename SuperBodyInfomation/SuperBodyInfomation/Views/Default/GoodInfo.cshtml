

@{
    ViewBag.Title = "商品填写";
}
<div class="panel panel-default">
    <div class="panel-body">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label for="firstname" class="col-sm-4 control-label">商品名称</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="GoodName"
                           placeholder="请输入商品名称">
                </div>
            </div>
            <div class="form-group">
                <label for="lastname" class="col-sm-4 control-label">商品图片</label>
                <div class="col-sm-8">
                    <input type="file" class="btn btn-default" id="GoodImg"
                           placeholder="请选择商品图片">
                </div>
            </div>
            <div class="form-group">
                <label for="lastname" class="col-sm-4 control-label">商品价格</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="GoodPrice"
                           placeholder="请输入商品价格" />
                </div>
            </div>
            <div class="form-group">
                <label for="lastname" class="col-sm-4 control-label">商品VIP价格</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="GoodVIPPrice"
                           placeholder="请输入商品VIP价格">
                </div>
            </div>
            <div class="form-group">
                <label for="lastname" class="col-sm-4 control-label">商品物流费</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="GoodLogisticsPrice"
                           placeholder="请输入商品物流费">
                </div>
            </div>
            <div class="form-group">
                <label for="lastname" class="col-sm-4 control-label">商品描述</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="Adreess"
                           placeholder="请输入商品描述">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button type="submit" class="btn btn-default">保存</button>
                </div>
            </div>
        </form>
    </div>
</div>




