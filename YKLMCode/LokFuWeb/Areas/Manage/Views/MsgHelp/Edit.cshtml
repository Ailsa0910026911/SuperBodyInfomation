@{
    MsgHelp MsgHelp = ViewBag.MsgHelp;
    ViewBag.SMUid = 21;
    IList<MsgHelp> MsgHelpList = ViewBag.MsgHelpList;
}
@Html.Partial("~/Areas/Manage/Views/Shared/Menu.cshtml")
<!-- BEGIN PAGE CONTENT-->
<div class="row">
  <div class="col-md-12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box light-grey">
      <div class="portlet-title">
        <div class="caption"> <i class="fa fa-globe"></i>@(ViewBag.Title)</div>
      </div>
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form action="@(MsgHelp.Id.IsNullOrEmpty()?"Add":"Save").html" id="chkForm" name="chkForm" class="form-horizontal chkForm" enctype="multipart/form-data" method="post">
          <input type="hidden" name="Id" value="@(MsgHelp.Id)" />
          <div class="form-body">
            <div class="alert alert-danger display-hide"><button class="close" data-close="alert"></button>您所填定内容无法通过验证，请检查警示项目. </div>
           @* <div class="form-group">
              <label class="control-label col-md-3">所属分类 <span class="required"> * </span> </label>
              <div class="col-md-4">
                <div class="input-icon right input-large"> <i class="fa"></i>
                  <select class="bs-select form-control input-large" name="PId" id="PId">
                    <option value="0"@(MsgHelp.PId==0?" selected":"")>==顶级信息==</option>
                    @foreach (var p in MsgHelpList){
                    <option value="@(p.Id)"@(MsgHelp.PId==p.Id?" selected":"")>@(p.Name)</option>
                    }
                  </select>
                </div>
                <p class="help-block"></p>
              </div>
            </div>*@
            <div class="form-group">
              <label class="control-label col-md-3">标题 <span class="required"> * </span> </label>
              <div class="col-md-4">
                <div class="input-icon right input-large"> <i class="fa"></i>
                  <input type="text" class="form-control validate[required] input-large" name="Name" id="Name" value="@(MsgHelp.Name)" alert="请填写标题" />
                </div>
                <p class="help-block"></p>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3">内容 <span class="required"> * </span> </label>
              <div class="col-md-4">
                <div class="input-icon right"> <i class="fa"></i>
                  <textarea class="input-xxlarge" name="Info" id="Info" maxlength="200" rows="12">@(MsgHelp.Info)</textarea>
                </div>
              </div>
            </div>
               <div class="form-group">
              <label class="control-label col-md-3">图片一</label>
              <div class="col-md-4">
                <div class="input-icon right input-xlarge">
                  @Html.Partial("FileLoad", new FileLoad() { BigName = "Pic1", FilePath = "MsgHelp", IsSmall = false, FileContentType = new string[] { "image/bmp", "image/gif", "image/pjpeg", "image/jpeg", "image/png" } })
                    @if (!MsgHelp.Pic1.IsNullOrEmpty())
                    {
                        <a href="@(Utils.ImageUrl("MsgHelp", MsgHelp.Pic1))" target="_blank">
                            <img src="@(Utils.ImageUrl("MsgHelp", MsgHelp.Pic1))" height="25" />
                        </a>
                    }
                </div>
              </div>
            </div>
               <div class="form-group">
              <label class="control-label col-md-3">图片二</label>
              <div class="col-md-4">
                <div class="input-icon right input-xlarge">
                  @Html.Partial("FileLoad", new FileLoad() { BigName = "Pic2", FilePath = "MsgHelp", IsSmall = false, FileContentType = new string[] { "image/bmp", "image/gif", "image/pjpeg", "image/jpeg", "image/png" } })
                    @if (!MsgHelp.Pic1.IsNullOrEmpty())
                    {
                        <a href="@(Utils.ImageUrl("MsgHelp", MsgHelp.Pic2))" target="_blank">
                            <img src="@(Utils.ImageUrl("MsgHelp", MsgHelp.Pic2))" height="25" />
                        </a>
                    }
                </div>
              </div>
            </div>
               <div class="form-group">
              <label class="control-label col-md-3">图片三</label>
              <div class="col-md-4">
                <div class="input-icon right input-xlarge">
                  @Html.Partial("FileLoad", new FileLoad() { BigName = "Pic3", FilePath = "MsgHelp", IsSmall = false, FileContentType = new string[] { "image/bmp", "image/gif", "image/pjpeg", "image/jpeg", "image/png" } })
                    @if (!MsgHelp.Pic1.IsNullOrEmpty())
                    {
                        <a href="@(Utils.ImageUrl("MsgHelp", MsgHelp.Pic3))" target="_blank">
                            <img src="@(Utils.ImageUrl("MsgHelp", MsgHelp.Pic3))" height="25" />
                        </a>
                    }
                </div>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-md-3">状态 <span class="required"> * </span> </label>
              <div class="col-md-4">
                <select class="bs-select form-control input-xsmall" name="State" id="State">
                    <option value="1"@(MsgHelp.State==1?" selected":"")>显示</option>
                    <option value="0"@(MsgHelp.State!=1?" selected":"")>隐藏</option>
                </select>
              </div>
            </div>
          </div>
          <div class="form-actions fluid">
            <div class="col-md-offset-3 col-md-9">
              <button type="submit" class="btn green">@(MsgHelp.Id.IsNullOrEmpty()?"确认添加":"确认修改")</button>
            </div>
          </div>
        </form>
        <!-- END FORM--> 
      </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET--> 
  </div>
</div>
@section FooterScripts
{
    @{
        <script src="/Content/Metronic/plugins/jquery.validationEngine_Float.js"></script>
    }
