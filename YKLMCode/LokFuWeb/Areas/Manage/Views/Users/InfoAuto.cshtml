@{
    Users Users = ViewBag.Users;
    ViewBag.SMUid = 42;
    LokFuEntity Entity = ViewBag.Entity;
}
@Html.Partial("~/Areas/Manage/Views/Shared/Menu.cshtml")
<!-- BEGIN PAGE CONTENT-->
<div class="row" style="width: 540px; height: 250px; overflow-x: hidden; overflow-y: auto; margin: 0px; padding: 10px;">
    <div class="portlet-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-advance table-hover">
                <thead>
                    <tr>
                        <th colspan="2"><i class="fa fa-globe"></i>自动提现设置</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Users.AutoCash.IsNullOrEmpty())
                    {
                        <tr>
                            <td class="success" colspan="2">未设置自动提现</td>
                        </tr>
                    }
                    else
                    {
                        UserCard UserCard = Entity.UserCard.FirstOrNew(n => n.UId == Users.Id && n.Id == Users.AutoCashBank);
                        <tr>
                            <td class="success" style="width: 120px">提现金额</td>
                            <td class="active">@(Users.AutoCashMoney.ToMoney())以上</td>
                        </tr>
                        <tr>
                            <td class="success" style="width: 120px">提现卡号</td>
                            <td class="active">@(UserCard.Card)</td>
                        </tr>
                        <tr>
                            <td class="success">提现银行</td>
                            <td class="active">@(UserCard.Bank)</td>
                        </tr>
                        <tr>
                            <td class="success" style="width: 120px">联行号</td>
                            <td class="active">@(UserCard.Bin)</td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
