@{
    Layout = null;
    string Error = ViewBag.Error;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>锁屏</title>
    <script src="/Content/Metronic/plugins/jquery-1.10.2.min.js" type="text/javascript"></script>
    <style>
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .login-body {
            width: 100%;
            height: 100%;
            position: fixed;
            left: 0;
            top: 0;
            background: url(../../Content/Metronic/image/LockScreenbg.png) no-repeat;
            overflow: hidden;
            background-size: 100% 100%;
        }

        .login {
            width: 300px;
            height: 150px;
            position: absolute;
            left: 50%;
            top: 50%;
            margin-left: -150px;
            margin-top: -75px;
        }

            .login input, .login button {
                width: 260px;
                height: 40px;
                line-height: 40px;
                font-size: 16px;
                outline: none;
                border-radius: 5px;
                font-family: "microsoft yahei";
            }

            .login input {
                border: 1px solid #ddd;
                padding-left: 20px;
                margin-bottom: 20px;
            }

            .login button {
                background: #343434;
                border: 1px solid #343434;
                color: #fff;
                width: 280px;
                height: 45px;
                line-height: 45px;
            }
    </style>
</head>
<body>
    <div class="login-body">
        <div class="login">

            <input type="password" placeholder="请输入登录密码" name="PassWord" id="LockScreenPassWord" />
            <button type="button" id="LockScreenSubmit">登 录 </button>

        </div>
    </div>

</body>
<script>
    $(function () {
        document.onmousewheel = function (evt) {
            var e = evt || window.event;
            if (e.preventDefault) e.preventDefault();
            e.returnValue = false;
        }
        if (window.addEventListener) window.addEventListener('DOMMouseScroll', document.onmousewheel, false);
        $('input').keyup(function (event) {

            if (event.keyCode == "13") {
                document.getElementById("LockScreenSubmit").click();
                return false;
            }
        });
        //验证锁屏密码是否正确
        $("#LockScreenSubmit").click(function () {
            var password = $("#LockScreenPassWord").val();
            if (password == "" || password == undefined) {
                // alert("请输入密码!");
                $("#LockScreenPassWord").attr("placeholder", "请输入密码!");
                return;
            }
            $.ajax({
                type: "Post",
                url: "/Manage/LockScreen/CHK_PWD.html",
                data: "PassWord=" + password,
                beforeSend: function () {
                    $("#LockScreenSubmit").hide();
                },
                success: function (ret) {
                    $("#LockScreenSubmit").show();
                    if (ret == "1") {
                        window.location.href = "/Manage/";
                    }
                        
                    else if (ret == "0") {
                        // alert("密码错误，请重新输入");
                        $("#LockScreenPassWord").attr("placeholder", "密码错误，请重新输入");
                        $("#LockScreenSubmit").show();
                    }
                    else {
                        window.location.reload();
                    }
                    $("#LockScreenPassWord").val("");
                }
            });
        });
    });
</script>
</html>
