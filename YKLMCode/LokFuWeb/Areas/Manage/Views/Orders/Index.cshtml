                                { 
                                    <th>出款方式 </th>
                                }
                                @if (Orders.TType == 1 || Orders.TType == 7 || Orders.TType == 8 || Orders.TType == 9)
                                { 
                                    <th>入款方式 </th>
                                }
                                <th>交易时间 </th>
                                <th>状态</th>
                                <th>支付信息 </th>
                                <th>入账时间 </th>
                                <th>分支机构 </th>
