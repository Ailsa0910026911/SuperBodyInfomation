                    $("#TrunType").val("");
                    $("#LagEntryDay").val("");
                    $("#spanTrunType").hide();
                    $("#spanLagEntryDay").hide();
                }
            });
            $('#Agent').select2({
                allowClear: false
            });
        });
        function getState(typeindex) {
            $.each(obj, function (i, n) {
                if (typeindex == i) {
                    //清空
                    $("#TState").empty();
                    $("#TState").append('<option value="0">所有</option>');
                    $.each(n, function (k, y) {
                        $("#TState").append('<option value="' + y.Key + '" >' + y.Value + '</option>');
                    });
                }
            });
