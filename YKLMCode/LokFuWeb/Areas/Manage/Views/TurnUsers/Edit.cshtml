@{
    TurnUsers TurnUsers = ViewBag.TurnUsers;
    ViewBag.SMUid = 89;
}
@Html.Partial("~/Areas/Manage/Views/Shared/Menu.cshtml")
<!-- BEGIN PAGE CONTENT-->
<div class="row" style="width: 500px; height:300px; overflow-x: hidden;overflow-y:auto; margin: 0px; padding: 10px;">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box light-grey">
      <div class="portlet-title">
        <div class="caption"> <i class="fa fa-globe"></i>@(ViewBag.Title)</div>
      </div>
      <div class="portlet-body form">
        <!-- BEGIN FORM-->
        <form action="@(TurnUsers.Id.IsNullOrEmpty()?"Add":"Save").html" id="chkForm" name="chkForm" class="form-horizontal chkForm" enctype="multipart/form-data" method="post">
          <input type="hidden" name="Id" value="@(TurnUsers.Id)" />
            <input type="hidden" name="IsAjax" value="1" />
          <div class="form-body">
            <div class="form-group">
              <label class="control-label col-md-3">可用次数 <span class="required"> * </span> </label>
              <div class="col-md-4">
                <div class="input-icon right input-small"> <i class="fa"></i>
                  <input type="text" class="form-control  validate[required,custom[int]] input-small" name="Times" id="Times" value="@(TurnUsers.Times)" />
                </div>
                <p class="help-block"></p>
              </div>
            </div>
          </div>
          <div class="form-actions fluid">
            <div class="col-md-offset-3 col-md-9">
              <button type="submit" class="btn green">确认修改</button>
            </div>
          </div>
        </form>
        <!-- END FORM--> 
      </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET--> 
</div>
@section FooterScripts
{
    @{
<script src="/Content/Metronic/plugins/jquery.validationEngine.js"></script>
    }
}
