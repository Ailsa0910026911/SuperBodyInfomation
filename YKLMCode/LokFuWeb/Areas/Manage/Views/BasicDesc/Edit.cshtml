@{
    BasicDesc BasicDesc = ViewBag.BasicDesc;
    List<BasicCode> BasicCodeList = ViewBag.BasicCodeList;
    ViewBag.SMUid = 0;
}
@Html.Partial("~/Areas/Manage/Views/Shared/Menu.cshtml")
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box light-grey">
            <div class="portlet-title">
                <div class="caption"><i class="fa fa-globe"></i>@(ViewBag.Title)</div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="@(BasicDesc.Id.IsNullOrEmpty() ? "Add" : "Save").html" id="chkForm" name="chkForm" class="form-horizontal chkForm" enctype="multipart/form-data" method="post">
                    <input type="hidden" name="Id" value="@(BasicDesc.Id)" />
                    <div class="form-body">
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button>
                            您所填定内容无法通过验证，请检查警示项目.
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">分类名称 <span class="required">* </span></label>
                            <div class="col-md-4">
                                <div class="input-icon right input-large">
                                    <i class="fa"></i>
                                    <select class="form-control input-small input-inline input-sm" id="CharCode" name="CharCode">
                                        @{
                                            foreach (var item in BasicCodeList)
                                            {                                  
                                            <option value="@item.CharCode">@item.CharText</option>
                                            }
                                        }
                                    </select>
                                    @*<input type="text" class="form-control  validate[required] input-large" name="CharCode" id="CharCode" value="@(BasicDesc.CharCode)" />*@
                                </div>
                                <p class="help-block"></p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">用语标题 <span class="required">* </span></label>
                            <div class="col-md-4">
                                <div class="input-icon right input-large">
                                    <i class="fa"></i>
                                    <input type="text" class="form-control  validate[required] input-large" name="TitleCode" id="TitleCode" value="@(BasicDesc.TitleCode)" />
                                </div>
                                <p class="help-block"></p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">用语详细描述 <span class="required">* </span></label>
                            <div class="col-md-4">
                                <div class="input-icon right col-md-9">
                                    <i class="fa"></i>
                                    <textarea class="input-xxlarge" name="DescText" id="DescText" rows="12">@(BasicDesc.DescText)</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">排序 <span class="required">* </span></label>
                            <div class="col-md-4">
                                <div class="input-icon right input-large">
                                    <i class="fa"></i>
                                    <input type="text" class="form-control  validate[required] input-large" name="Sort" id="Sort" value="@(BasicDesc.Sort)" />
                                </div>
                                <p class="help-block"></p>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions fluid">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green">@(BasicDesc.Id.IsNullOrEmpty()?"确认添加":"确认修改")</button>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
@section FooterScripts
{
    @{
        <script src="/Content/Metronic/plugins/jquery.validationEngine.js"></script>
        <script type="text/javascript">
            $(function () {
                var duanyuBiaoshi = '@(BasicDesc.CharCode)';
                if (duanyuBiaoshi != "") {
                    $("#CharCode").val(duanyuBiaoshi);
                }
            });
        </script>
    }
}
