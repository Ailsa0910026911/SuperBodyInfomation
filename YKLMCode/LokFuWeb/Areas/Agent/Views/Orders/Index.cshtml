        var obj = jQuery.parseJSON(sjson);
        $(function () {
            getState("@(Orders.TType)");
            $("#TState").val("@(Orders.TState)");
            $("#TType").change(function () {
                var v = $(this).val();
                if (v != "") {
                    getState($(this).val());
                    if (v == 2 || v == 5) {
                        $("#TrunType").show();
                        $("#LagEntryDay").val(0).hide();
                    } else if (v == 1 || v == 7 || v == 8 || v == 9) {
                        $("#TrunType").val(0).hide();
                        $("#LagEntryDay").show();
                    } else {
                        $("#TrunType").val(0).hide();
                        $("#LagEntryDay").val(0).hide();
                    }

                } else {
                    $("#TState").empty();
                    $("#TState").append('<option value="0">所有</option>');
                    $("#TrunType").val(0).hide();
                    $("#LagEntryDay").val(0).hide();
                }
            });
            if ($("#IsShowSupAgent").val() == "true") {
                $("#LowerLevel_td1").show();
                $("#LowerLevel_td2").show();
            }
            else {
                $("#LowerLevel_td1").hide();
                $("#LowerLevel_td2").hide();
            }
            $("#IsShowSupAgent").change(function () {
                if ($("#IsShowSupAgent").val() == "true") {
                    $("#LowerLevel_td1").show();
                    $("#LowerLevel_td2").show();
                }
                else {
                    $("#LowerLevel_td1").hide();
                    $("#LowerLevel_td2").hide();
                }
            });
        });
        function getState(typeindex) {
            $.each(obj, function (i, n) {
                if (typeindex == i) {
                    //清空
                    $("#TState").empty();
                    $("#TState").append('<option value="0">所有</option>');
                    $.each(n, function (k, y) {
                        $("#TState").append('<option value="' + y.Key + '">' + y.Value + '</option>');
                    });
                }
            });
        }
    </script>
